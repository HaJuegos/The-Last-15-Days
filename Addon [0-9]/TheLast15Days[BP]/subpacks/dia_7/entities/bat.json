                "float_duration": [
                    0.1,
                    0.35
                ]
            },
            "minecraft:can_fly": {},
            "minecraft:health": {
                "value": 6,
                "max": 6
            },
            "minecraft:nameable": {},
            "minecraft:physics": {},
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:attack": {
                "damage": 5
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "cnvx:bat_angry"
                    ]
                }
            },
            "cnvx:explode": {
                "add": {
                    "component_groups": [
                        "cnvx:explode"
                    ]
                }
            }
