{
	"format_version": "1.18.20",
	"animation_controllers": {
		"controller.animation.ha_dead_system": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"dead": "query.is_alive == 0"
						}
					]
				},
				"dead": {
					"transitions": [
						{
							"default": "!query.is_alive == 0"
						}
					],
					"on_entry": [
						"/function system/sistema_de_muerte"
					]
				}
			}
		},
		"controller.animation.ha_entry_world": {
			"states": {
				"default": {
					"transitions": [
						{
							"detect": "!query.is_moving"
						},
						{
							"detect": "query.is_moving"
						}
					]
				},
				"detect": {
					"on_entry": [
						"v.ui = query.life_time;"
					],
					"transitions": [
						{
							"ejecuted": "(query.life_time - v.ui) >= 19 && !query.is_moving"
						},
						{
							"ejecuted": "(query.life_time - v.ui) >= 19 && query.is_moving"
						}
					]
				},
				"ejecuted": {
					"transitions": [
						{
							"default": "(1.0)"
						}
					],
					"on_entry": [
						"/function system/configuracion_de_mundo",
						"/tellraw @s[tag=!m7] {\"rawtext\": [{\"translate\":\"day.message_7\"}]}",
						"/tag @s[tag=!m7] add m7",
						"/tag @s[tag=m6] remove m6"
					]
				}
			}
		}
	}
}