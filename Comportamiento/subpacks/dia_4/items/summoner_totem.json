{
    "format_version":"1.16.100",
    "minecraft:item":{
        "description":{
            "identifier":"cnvx:summoner_totem",
            "category":"items"
        },
        "components":{
            "minecraft:max_stack_size": 1,
            "minecraft:icon":{
                "texture":"summoner_totem"
            },
            "minecraft:on_use": {
				"on_use": {
					"event": "cnvx:effect"
				}
			}
        },
        "events":{
            "cnvx:effect":{
                "sequence":[
                    {
                        "run_command":{
                            "command":[
                                "event entity @s minecraft:gain_bad_omen",
                                "damage @s 0 temperature",
                                "playsound random.totem @s",
                                "particle minecraft:totem_particle ~ ~ ~",
                                "particle minecraft:totem_particle ~ ~1 ~",
                                "particle minecraft:totem_particle ~ ~2 ~",
                                "clear @s cnvx:summoner_totem 0 1"   
                            ]
                        }
                    }
                ]
            }
        }
    }
}